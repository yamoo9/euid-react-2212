{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "ES2015",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowUmdGlobalAccess": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "public/scripts",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public/scripts"]
}
