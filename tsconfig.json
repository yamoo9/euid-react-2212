{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./public/scripts",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "chapters", "public"]
}
